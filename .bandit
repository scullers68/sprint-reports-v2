[bandit]
# Bandit configuration for Sprint Reports v2
skips = B101,B601
exclude_dirs = /backend/tests,/backend/venv,/backend/alembic

[bandit.any_other_function_with_shell_equals_true]
no_shell = [
  os.execl,
  os.execle,
  os.execlp,
  os.execlpe,
  os.execv,
  os.execve,
  os.execvp,
  os.execvpe,
  os.spawnl,
  os.spawnle,
  os.spawnlp,
  os.spawnlpe,
  os.spawnv,
  os.spawnve,
  os.spawnvp,
  os.spawnvpe,
  os.startfile
]