# Sprint Reports v2 - Environment Configuration Template

# Database Configuration
DATABASE_URL=postgresql+asyncpg://sprint_reports:password@localhost:5432/sprint_reports_v2
POSTGRES_USER=sprint_reports
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=sprint_reports_v2

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your_super_secret_key_here_min_32_chars
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Environment
ENVIRONMENT=development
LOG_LEVEL=info

# External Services
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your_jira_email@company.com
JIRA_API_TOKEN=your_jira_api_token

# CI/CD Configuration
SONAR_TOKEN=your_sonarqube_token
SONAR_HOST_URL=http://localhost:9000
SNYK_TOKEN=your_snyk_token

# Deployment Configuration
STAGING_HOST=staging.your-domain.com
STAGING_PORT=8001
STAGING_DB_PASSWORD=staging_secure_password
STAGING_SECRET_KEY=staging_secret_key_min_32_chars

PRODUCTION_HOST=your-domain.com
PRODUCTION_PORT=8000